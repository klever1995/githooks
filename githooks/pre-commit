#!/bin/bash

# Verifica si el archivo index.html existe
if [ ! -f "index.html" ]; then
    echo "ERROR: index.html no se encuentra en el proyecto."
    exit 1
fi

# Valida si el archivo index.html tiene las etiquetas <html> y </html>
if ! grep -q "<html>" index.html || ! grep -q "</html>" index.html; then
    echo "ERROR: index.html no tiene las etiquetas HTML correctas. Por favor, corrige antes de hacer commit."
    exit 1
fi

# Si pasa la validaci√≥n, permite el commit
exit 0
